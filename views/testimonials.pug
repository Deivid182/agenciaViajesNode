extends  ./layout/index

block content 
  main.container.mt-5 
    h1.text-center.mt-5= page

    blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
    include ./layout/bloque_testimoniales  

    .row
      .col-md-12 
        h2.d-block.w-100.text-center Agrega un testimonial

        if(errores) 
          each error in errores
            .alert.col.alert-danger.text-center= error.mensaje

      .row.justify-content-center.col 
          .col-md-8 
            form(action="/testimonials", method="post") 
              .form-group 
                label(for="nombre") Nombre 
                input#nombre(type="text", placeholder="Nombre", name="nombre", class="form-control", value= nombre)
              .form-group 
                label(for="correo") Correo electr√≤nico 
                input#correo(type="text", placeholder="Correo", name="correo", class="form-control", value= correo)   
              .form-group 
                label(for="mensaje") Mensaje 
                textarea#mensaje(name="mensaje", placeholder="Tu mensaje" rows="3" class="form-control")=mensaje   
              input.btn.btn-success.w-100(type="submit")
      